; [MASTER]
; # A comma-separated list of package or module names from where C extensions
; # may be loaded. Extensions are loading into the active Python interpreter
; # and may run arbitrary code.
; extension-pkg-whitelist=

[MESSAGES CONTROL]
; # Disable the message, report, category or checker with the given id(s).
disable=
    missing-function-docstring,
    missing-module-docstring,
    missing-class-docstring,
    too-few-public-methods,
    too-many-arguments,
    too-many-locals,
    invalid-name

; [REPORTS]
; # Set the output format. Available formats are text, parseable, colorized, json and msvs (visual studio).
; output-format=text
; reports=no

; [FORMAT]
; # Maximum number of characters on a single line.
; max-line-length=88

; # Regular expression for a line that is allowed to be longer than the limit.
; ignore-long-lines=

; # Number of spaces to use for indentation.
; indent-string='    '

; [DESIGN]
; # Maximum number of arguments for function / method.
; max-args=5

; # Maximum number of attributes for a class (including properties).
; max-attributes=10

; # Maximum number of public methods allowed per class.
; max-public-methods=20

; [BASIC]
; # Naming style matching correct function names
; function-rgx=[a-z_][a-z0-9_]{2,30}$

; # Naming style matching correct variable names
; variable-rgx=[a-z_][a-z0-9_]{2,30}$

; # Naming style matching correct class names
; class-rgx=[A-Z_][a-zA-Z0-9]+$

; # Naming style matching correct module names
; module-rgx=^[a-z_][a-z0-9_]{2,30}$

; # Regular expression matching correct method names.
; method-rgx=[a-z_][a-z0-9_]{2,30}$

; [VARIABLES]
; # A regular expression matching the name of dummy variables (i.e. expectedly not used).
; dummy-variables-rgx=_|dummy

; [TYPECHECK]
; # List of members which are set dynamically and missed by pylint inference system,
; # and so shouldn't trigger E1101 when accessed. Python regular expressions are accepted.
; generated-members=

; [SIMILARITIES]
; # Minimum lines number of a similarity.
; min-similarity-lines=4

; [SPELLING]
; # Add words to ignore list if you encounter false positives for specific terms.
; spelling-ignore-words=
; spelling-dict=
; spelling-private-dict-file=
; spelling-store-unknown-words=no
; spelling-ignore-words=load_dotenv
